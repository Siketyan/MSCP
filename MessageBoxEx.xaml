<Window x:Class="Minecraft_Server_Control_Panel.MessageBoxEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="160" Width="440" WindowStyle="None"
    Loaded="Window_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <Border BorderBrush="#FFD5D6D6" BorderThickness="1" Background="White">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="PART_Image" Width="38" Height="38" VerticalAlignment="Top" Margin="20,20,20,0" />
                    <TextBlock x:Name="PART_TextBlock" TextWrapping="Wrap" Width="340" Height="54" Margin="0,25,10,6" FontSize="13" />
                </StackPanel>
                <StackPanel x:Name="PART_StackPanel" Orientation="Horizontal" HorizontalAlignment="Right">
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
